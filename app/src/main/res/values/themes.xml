        <!-- Secondary brand color. -->
        <item name = "colorSecondary">@color/second</item>
        <item name = "colorOnSecondary">@color/on_second</item>
        <item name = "colorSecondaryContainer">@color/secondary_container</item>
        <item name = "colorOnSecondaryContainer">@color/on_secondary_container</item>

        <!-- Third brand color. -->
        <item name = "colorTertiary">@color/third</item>
        <item name = "colorTertiaryContainer">@color/third_container</item>
        <item name = "colorOnTertiary">@color/on_third</item>
        <item name = "colorOnTertiaryContainer">@color/on_third_container</item>

        <!-- Surface color. -->
        <item name = "colorSurfaceDim">@color/surface_dim</item>
