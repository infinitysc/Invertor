<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.journeyapps.barcodescanner.BarcodeView
        android:id="@+id/barcode_view"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_to_next_fragment"
        style="@style/generalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:text="@string/goToCard"
        app:layout_constraintEnd_toEndOf="@+id/barcode_view"
        app:layout_constraintStart_toStartOf="@+id/barcode_view"
        app:layout_constraintTop_toBottomOf="@+id/switch_torch" />

    <TextView
        android:id="@+id/noteUser"
        android:layout_width="105dp"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:text="@string/userVib"
        app:layout_constraintEnd_toEndOf="@+id/userValue"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toStartOf="@+id/barcode_view"
        app:layout_constraintTop_toTopOf="@+id/userValue" />

    <TextView
        android:id="@+id/userValue"
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        android:text="@string/vibUser"
        app:layout_constraintEnd_toEndOf="@+id/barcode_view"
        app:layout_constraintHorizontal_bias="0.696"
        app:layout_constraintStart_toStartOf="@+id/barcode_view"
        app:layout_constraintTop_toBottomOf="@+id/barcode_view" />

    <TextView
        android:id="@+id/noteValue"
        android:layout_width="105dp"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:text="@string/valueText"
        app:layout_constraintEnd_toEndOf="@+id/noteUser"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/noteUser"
        app:layout_constraintTop_toTopOf="@+id/value" />

    <TextView
        android:id="@+id/value"
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:text="@string/value"
        app:layout_constraintEnd_toEndOf="@+id/userValue"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/userValue"
        app:layout_constraintTop_toBottomOf="@+id/userValue" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_torch"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="@string/torch"
        app:layout_constraintEnd_toEndOf="@+id/value"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/noteValue"
        app:layout_constraintTop_toBottomOf="@+id/value" />

    <ImageButton
        android:id="@+id/refreshButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="128dp"
        app:layout_constraintEnd_toEndOf="@+id/barcode_view"
        app:layout_constraintHorizontal_bias="0.036"
        app:layout_constraintStart_toEndOf="@+id/value"
        app:layout_constraintTop_toBottomOf="@+id/barcode_view"
        app:srcCompat="@drawable/icons8_refresh_32" />

    <TextView
        android:id="@+id/testCard"
        android:layout_width="392dp"
        android:layout_height="49dp"
        android:layout_marginTop="28dp"
        android:visibility="visible"
        android:text="TEST_USER_CARD"
        app:layout_constraintEnd_toEndOf="@+id/switch_torch"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/switch_torch"
        app:layout_constraintTop_toBottomOf="@+id/switch_torch" />

</androidx.constraintlayout.widget.ConstraintLayout>